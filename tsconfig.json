{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDirs": ["src"],
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "preserve",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@*": ["*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ]
}
